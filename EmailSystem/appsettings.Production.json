{
    "Serilog": {
        "MinimumLevel": "Debug",
        "WriteTo": [
            {
                "Name": "File",
                "Args": {
                    "path": "./logs/log-.txt",
                    "RollingInterval": "Day",
                    "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog",
                    "shared": true
                }
            }
        ]
    },
    "Logging": {
        "LogLevel": {
            "Default": "Warning",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "MailerName": "MailTrap"
}
